extends layout

block head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery-2.0.3.min.js')
    script(src='/javascripts/gamecontroller.js')
    script(src='/javascripts/phaser.js')
    script(src='/javascripts/Player.js')
    script(src='/javascripts/socket.js')

block content
  h1= title
  p Welcome to #{title}
  span Ping: 
  span(id="ping") 0
  span ms
  br
  p
    p
      span X: 
      span(id="latt") 0
      span  Y: 
      span(id="lng") 0
    p
      span Angle: 
      span(id="angle") 0
      span  Selected: 
      span(id="unit_selected") 0
    p
      span Health: 
      span(id="unit_health") 0
  a(href="/" target="_blank") New Tab
  br
  a(href="javascript:closeConn()") close
  br
  a(href="javascript:openConn()") open